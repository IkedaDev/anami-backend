{
  "compilerOptions": {
    /* Configuración Base */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    /* Rutas y Directorios */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Configuración para evitar el error que tienes */
    "verbatimModuleSyntax": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
